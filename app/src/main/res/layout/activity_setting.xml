<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.SettingActivity">

    <include android:id="@+id/tool"
        layout="@layout/toolbar"
        />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_below="@+id/tool">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:id="@+id/cvLang"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                app:cardCornerRadius="9dp"
                android:layout_marginHorizontal="3dp"
                app:cardElevation="1dp"
                app:cardBackgroundColor="@color/card_color_profile">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/ic_language"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="@dimen/margin_20dp"
                        />

                    <TextView
                        android:id="@+id/tvLang"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:text="@string/choose_language"
                        android:textSize="14sp"
                        android:fontFamily="@font/roboto_regular"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="@dimen/margin_20dp"
                        />
                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cvAbout"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                app:cardCornerRadius="9dp"
                android:layout_marginHorizontal="3dp"
                app:cardElevation="1dp"
                app:cardBackgroundColor="@color/card_color_profile">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/ic_aboutus"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="@dimen/margin_20dp"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:text="@string/about_us"
                        android:textSize="14sp"
                        android:fontFamily="@font/roboto_regular"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="@dimen/margin_20dp"
                        />
                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cvPrivacy"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                app:cardCornerRadius="9dp"
                android:layout_marginHorizontal="3dp"
                app:cardElevation="1dp"
                app:cardBackgroundColor="@color/card_color_profile">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/ic_privacy_policy"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="@dimen/margin_20dp"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:text="@string/privacy_policy"
                        android:textSize="14sp"
                        android:fontFamily="@font/roboto_regular"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="@dimen/margin_20dp"
                        />
                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cvLogout"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:layout_marginHorizontal="3dp"
                android:layout_marginBottom="30dp"
                app:cardCornerRadius="9dp"
                app:cardElevation="1dp"
                app:cardBackgroundColor="@color/card_color_profile">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/ic_logout"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="@dimen/margin_20dp"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:text="@string/logout"
                        android:textSize="14sp"
                        android:fontFamily="@font/roboto_regular"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="@dimen/margin_20dp"
                        />
                </LinearLayout>

            </androidx.cardview.widget.CardView>


        </LinearLayout>
    </ScrollView>

    <com.ads.androidsdk.sdk.format.BannerLayout
        android:id="@+id/BANNER"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout>